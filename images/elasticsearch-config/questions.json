{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "analysis": {
        "analyzer": {
          "question_analysis": {
            "filter": [
              "standard",
              "lowercase",
              "porter_stem",
              "stop"
            ],
            "char_filter": [
              "html_strip"
            ],
            "tokenizer": "classic"
          }
        }
      }
    }
  },
  "mappings": {
    "questions": {
      "dynamic": "false",
      "properties": {
        "accepted_answer_id": {
          "type": "keyword"
        },
        "body": {
          "type": "text",
          "analyzer": "question_analysis"
        },
        "creation_date": {
          "type": "date"
        },
        "last_activity_date": {
          "type": "date"
        },
        "score": {
          "type": "float"
        },
        "title": {
          "type": "text",
          "analyzer": "question_analysis"
        }
      }
    }
  }
}